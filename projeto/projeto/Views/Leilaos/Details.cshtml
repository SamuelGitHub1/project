@inject projeto.Data.ApplicationDbContext _context
@model projeto.Models.Leilao
@using Microsoft.EntityFrameworkCore

@{
    var english = Context.Request.Cookies["language"] == "en" || Context.Request.Cookies["language"] == null;
    ViewData["Title"] = english ? "Auction Details" : "Detalhes do Leilão";
    var loggedUserId = ViewData["UserId"] as int?;
}

<h1>@(english ? "Auction Details" : "Detalhes do Leilão")</h1>

<div>
    <h4>@(english ? "Auction" : "Leilão"): @Model.Item.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@(english ? "Item" : "Item")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Item.ItemId)</dd>

        <dt class="col-sm-2">@(english ? "Start Date" : "Data de Início")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataInicio)</dd>

        <dt class="col-sm-2">@(english ? "End Date" : "Data de Fim")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataFim)</dd>

        <dt class="col-sm-2">@(english ? "Minimum Increment" : "Incremento Mínimo")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ValorIncrementoMinimo)</dd>

        <dt class="col-sm-2">@(english ? "Winner" : "Vencedor")</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Vencedor)</dd>
    </dl>
</div>

@if (Model.EstadoLeilao == EstadoLeilao.Encerrado)
{
    <button id="btnShowBids" class="btn btn-success btn-sm">
        @(english ? "View Bids" : "Ver Licitações")
    </button>

    <div id="bidsList" style="display:none; margin-top: 20px;">
        <h4>@(english ? "Bids" : "Licitações")</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>@(english ? "User" : "Usuário")</th>
                    <th>@(english ? "Amount" : "Valor")</th>
                    <th>@(english ? "Date" : "Data")</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var licitacoes = _context.Licitacoes
                    .Where(l => l.LeilaoId == Model.LeilaoId)
                    .Include(l => l.Utilizador)
                    .OrderByDescending(l => l.ValorLicitacao)
                    .ToList();
                }

                @foreach (var licitacao in licitacoes)
                {
                    <tr>
                        <td>@licitacao.Utilizador.Nome</td>
                        <td>€@licitacao.ValorLicitacao</td>
                        <td>@licitacao.DataLicitacao.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        document.getElementById("btnShowBids").onclick = function() {
            var bidsList = document.getElementById("bidsList");
            bidsList.style.display = (bidsList.style.display === "none") ? "block" : "none";
        };
    </script>
}
else
{
    <p>@(english ? "This auction is still active." : "Este leilão ainda está ativo.")</p>
}

<div>
    @if (loggedUserId != null && loggedUserId == Model.UtilizadorId)
    {
        <a asp-action="Edit" asp-route-id="@Model.LeilaoId">
            @(english ? "Edit" : "Editar")
        </a>
    }
    <a asp-action="Index">@(english ? "Back to List" : "Voltar à Lista")</a>
</div>
