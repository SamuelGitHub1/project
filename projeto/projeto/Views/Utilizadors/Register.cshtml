@model projeto.Models.Utilizador

@{
    ViewData["Title"] = "Register";
}
@{
    var english = Context.Request.Cookies["language"] == "en" || Context.Request.Cookies["language"] == null;
}

<div class="container register-page">
    <div class="register-container">
        <div class="logo-container">
            <img src="~/css/images/logotipo.png" alt="Logo" class="logo" />
        </div>

        <h2>@(english ? "Register" : "Registar")</h2>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <input asp-for="Nome" class="form-control form-control-lg" placeholder="@(english ? "Enter your name" : "Insira o seu nome")" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" placeholder="@(english ? "Enter your email" : "Insira o seu email")" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="@(english ? "Enter your password" : "Insira a sua palavra-passe")" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Checkbox para Aceitar os Termos e Condições -->
            <div class="form-group">
                <label for="acceptedTerms">
                    <input type="checkbox" id="acceptedTerms" name="acceptedTerms" value="true" />
                    @(english ? "I accept the " : "Aceito os ")<a href="@Url.Action("Terms", "Home")" target="_blank">
                        @(english ? "Terms and Conditions" : "Termos e Condições")
                    </a>
                </label>
            </div>

            <button type="submit" id="registerBtn" class="btn register-btn btn-block" disabled="disabled">
                @(english ? "Register" : "Registar")
            </button>
        </form>
        <div class="mt-3">
            <a href="@Url.Action("Login", "Utilizadors")" class="forgot-password-link">@(english ? "Already have an account? Log in" : "Já tem uma conta? Faça login")</a>
        </div>

        @if (!string.IsNullOrEmpty(ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">
                @ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </div>
</div>

<script>
    document.getElementById("acceptedTerms").addEventListener("change", function() {
        document.getElementById("registerBtn").disabled = !this.checked;
    });
</script>